{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@ticket-booking/charts/number-chart": [
        "libs/charts/number-chart/src/index.ts"
      ],
      "@ticket-booking/charts/vertical-bar-chart": [
        "libs/charts/vertical-bar-chart/src/index.ts"
      ],
      "@ticket-booking/collection/feature/collection": [
        "libs/collection/feature/collection/src/index.ts"
      ],
      "@ticket-booking/dashboard/feature/dashboard": [
        "libs/dashboard/feature/dashboard/src/index.ts"
      ],
      "@ticket-booking/movies/feature/details": [
        "libs/movies/feature/details/src/index.ts"
      ],
      "@ticket-booking/movies/feature/home": [
        "libs/movies/feature/home/src/index.ts"
      ],
      "@ticket-booking/movies/feature/movies": [
        "libs/movies/feature/movies/src/index.ts"
      ],
      "@ticket-booking/movies/ui/list": ["libs/movies/ui/list/src/index.ts"],
      "@ticket-booking/movies/ui/slider": [
        "libs/movies/ui/slider/src/index.ts"
      ],
      "@ticket-booking/shell/book-my-cinema": [
        "libs/shell/book-my-cinema/src/index.ts"
      ],
      "@ticket-booking/shell/ticket-admin": [
        "libs/shell/ticket-admin/src/index.ts"
      ],
      "@ticket-booking/showtimes/features/manage": [
        "libs/showtimes/features/manage/src/index.ts"
      ],
      "@ticket-booking/ticket-booking-library": [
        "libs/ticket-booking-library/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
